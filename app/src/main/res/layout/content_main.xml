<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.portfolioapp.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:gravity="center_horizontal"
        android:textSize="25dp"
        android:layout_marginBottom="20dp"
        android:textColor="#000000"
        android:text="My Nanodegree Apps!" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Spotify Streamer"
        android:id="@+id/buttonSpotifyStreamer"
        android:singleLine="false"
        android:enabled="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorUdaOrange"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:allowUndo="true"
        android:onClick="displayInfo"/>

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Scores App"
        android:id="@+id/buttonScoreApp"
        android:singleLine="false"
        android:enabled="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorUdaOrange"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:allowUndo="true"
        android:onClick="displayInfo" />

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Library App"
        android:id="@+id/buttonLibraryApp"
        android:singleLine="false"
        android:enabled="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorUdaOrange"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:allowUndo="true"
        android:onClick="displayInfo" />

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Build it bigger"
        android:id="@+id/buttonBuildItBigger"
        android:singleLine="false"
        android:enabled="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorUdaOrange"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:allowUndo="true"
        android:onClick="displayInfo" />

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Xyz reader"
        android:id="@+id/buttonXyzReader"
        android:singleLine="false"
        android:enabled="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorUdaOrange"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:allowUndo="true"
        android:onClick="displayInfo" />

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Capstone: my own app"
        android:id="@+id/buttonCapstone"
        android:singleLine="false"
        android:enabled="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:background="#FF0000"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:allowUndo="true"
        android:onClick="displayInfo" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
